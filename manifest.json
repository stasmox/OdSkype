{
	"name": "OdSkype",
	"manifest_version": 2,
	"version": "1.1",
	"description": "It makes OneDrive and Skype available as chrome app.",
	"app": {
    	"background": {
      		"scripts": ["app.js"]
    	}	
    },
    "icons": {
    	"16": "icons/skype-16.png",
    	"24": "icons/skype-24.png",
    	"48": "icons/skype-48.png",
    	"64": "icons/skype-64.png",
    	"128": "icons/skype-128.png"
  	},
	"permissions": [
    "*://one-drive.live.com/*",
	"webview"
  ]
}
